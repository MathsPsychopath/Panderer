rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /live-polls/{pollId} {
      allow read: if true; 
      allow write: if request.auth != null
    }
    match /poll-subs/{userId} {
    	allow read: if true;
      allow write: if request.auth != null
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}